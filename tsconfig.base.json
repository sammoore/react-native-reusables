{
  "extends": "expo/tsconfig.base",
  "include": ["packages"],
  "compilerOptions": {
    "allowJs": false,
    // TODO: should be false
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDecoratorMetadata": false,
    // esModuleInterop: true provided by expo/tsconfig.base
    "experimentalDecorators": false,
    //"importHelpers": true,
    // jsx: 'react' provided by expo/tsconfig.base
    // lib provided by expo/tsconfig.base
    // moduleResolution: 'node' provided by expo/tsconfig.base
    // skipLibCheck: true provided by expo/tsconfig.base
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    // TODO: ideally should be false
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    // resolveJsonModule: true provided by expo/tsconfig.base
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    // target provided by expo/tsconfig.base
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"],

    "module": "esnext",
    "moduleDetection": "force",
    "incremental": true
  }
}
